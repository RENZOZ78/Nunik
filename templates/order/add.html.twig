{% extends 'base.html.twig' %}

{% block title %}Paiement de ma commande - Nunik {% endblock %}

{% block content %}

    <h2>Mon récapitulatif</h2>
    <p>Vérifiez vos informations aveant de payer votre commande</p>
    <hr >
    <div class="row">
        <div class="col-md-6 ">
           <strong>Mon addresse de livraison</strong> <br >

            <div class="form-check mt-4">
                {{ delivery|raw }} <br >


            </div>
            <hr >

            <strong>Mon transporteur</strong>
            <div class="form-check">
                {{ carrier.name }} <br >
                {{ carrier.description }} <br >
                {{ carrier.price| number_format(2,',','.') }}€ }} <br >
{#                {{ dump(carrier) }}#}
            </div>

        </div>
        <div class="col-md-6 ">
            <div class="text-center">
                <b>Récap de ma commande </b><br >
{#                <p>Retrouvez le récapitulatif de vos produits</p>#}
            </div>
            {#                <b>Récap de ma commande</b><br >#}
            {#                {{ dump(cart) }}#}
            <div class="oder-summary">
                {%  set total = null %}
                {%for key, product in cart  %}
                    <div class="row {%  if key > 0 %}mt-2{%  endif %}" >

                        <div class="col-2">
                            <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br/>
{#                            {{ dump(product) }}#}
                            <small>
                                {{ product.product.subtitle }}
                                <br >
                                x {{ product.quantity }}
                            </small>
                        </div>
                        <div class="col-2 my-auto">
                            Total
                            {{  ((product.product.price * product.quantity ) / 100) |number_format(2, ',', '.') }} €
                        </div>
                    </div>
{#                    {{ dump(product) }}#}
                    {% set total = total + (product.product.price * product.quantity)  %}
                {% endfor %}
            </div>

{#         {{dump(carrier)  }}#}
                <hr >
                <strong>Sous-Total : </strong> {{ (total / 100) |number_format(2, ',', '.') }}€<br/>
                <strong>Livraison : </strong>{{carrier.price | number_format(2,',','.') }}€<br >
                <hr >
                <strong>Total</strong> {{ ((total/100) + carrier.price)|number_format(2,',', '.') }} €


                <a href = "" class = "btn btn-success btn-block mt-3 " >Payer | {{ ((total/100) + carrier.price)|number_format(2,',', '.') }} €</a >


        </div>
    </div>

{% endblock %}

